l1=float(input('Digite o valor do primeiro lado:'))
l2=float(input('Digite o valor do segundo lado:'))
l3=float(input('Digite o valor do terceiro lado:'))

if (l1 >l2+l3) or (l2>l1+l3) or (l3>l1+l2):
	print ('Não pode ser um triângulo, pois um dos lados é maior que a soma dos outros')
elif (l1==l2==l3):
	print('O triângulo é equilátero, pois possui todos os lados iguais')
elif (l1==l2!=l3) or (l1==l3!=l2) or (l2==l3!=l1) :
	print('O triângulo é isóceles, pois possui dois lados iguais')
else:
	print('O triângulo é escaleno, pois nenhum lado é igual')

